package Main;

import java.time.LocalDate;
import AirlineInfo.Flight;
import AirlineInfo.Ticket;

/**
 * 
 * @author Anastasia
 */

import ClientInfo.Client;

public class MainProgram {

	public static void main(String[] args) {

		//create a flight, initialize
		//in client create ticket for a client
		//console output for everything
		
		Client client = new Client("Petr Petrov");
		
		Flight flight = new Flight(LocalDate.of(2016, 10, 31), 30, 10, 5, 
				LocalDate.of(2016, 10, 25), 2, 5f, 3f, 3f);
		
		client.setLuggageWeight(10);
		client.setRegisterFirst(false);
		
		Ticket ticket = new Ticket();
		
		ticket = client.orderTicket(flight, client.getLuggageWeight(), client.getRegisterFirst());
		client.payForTicket(ticket);

	}

}
